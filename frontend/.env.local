# =================================================================
# RESTAURANT WEB UI - ENVIRONMENT CONFIGURATION
# =================================================================

# Application Info
NEXT_PUBLIC_APP_NAME="Restaurant Management"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Mobile & Tablet Optimized Restaurant Management Interface"

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_TIMEOUT=30000

# Restaurant API Endpoints
NEXT_PUBLIC_AUTH_ENDPOINT=/api/v1/auth
NEXT_PUBLIC_RESTAURANTS_ENDPOINT=/api/v1/restaurants
NEXT_PUBLIC_MENU_ENDPOINT=/api/v1/restaurants
NEXT_PUBLIC_ORDERS_ENDPOINT=/api/v1/orders
NEXT_PUBLIC_STAFF_ENDPOINT=/api/v1/restaurants

# Authentication Configuration
NEXT_PUBLIC_TOKEN_STORAGE_KEY=restaurant_auth_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=restaurant_refresh_token
NEXT_PUBLIC_SESSION_TIMEOUT=1800000
NEXT_PUBLIC_AUTO_LOGOUT_WARNING=300000

# UI Configuration
NEXT_PUBLIC_THEME=restaurant
NEXT_PUBLIC_PRIMARY_COLOR=#FF6B35
NEXT_PUBLIC_SECONDARY_COLOR=#2C3E50
NEXT_PUBLIC_SUCCESS_COLOR=#27AE60
NEXT_PUBLIC_WARNING_COLOR=#F39C12
NEXT_PUBLIC_ERROR_COLOR=#E74C3C

# Mobile & Tablet Configuration
NEXT_PUBLIC_MOBILE_BREAKPOINT=768
NEXT_PUBLIC_TABLET_BREAKPOINT=1024
NEXT_PUBLIC_DESKTOP_BREAKPOINT=1280

# Performance Configuration
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_LAZY_LOADING=true
NEXT_PUBLIC_SERVICE_WORKER=true
NEXT_PUBLIC_OFFLINE_SUPPORT=true

# Feature Flags
NEXT_PUBLIC_ENABLE_QR_ORDERING=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# Development Configuration
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_MOCK_API=false

# PWA Configuration
NEXT_PUBLIC_PWA_NAME="Restaurant Manager"
NEXT_PUBLIC_PWA_SHORT_NAME="RestaurantMgr"
NEXT_PUBLIC_PWA_DESCRIPTION="Mobile restaurant management interface"
NEXT_PUBLIC_PWA_THEME_COLOR="#FF6B35"
NEXT_PUBLIC_PWA_BACKGROUND_COLOR="#FFFFFF"

# Google Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=

# Sentry Error Tracking (Optional)
# NEXT_PUBLIC_SENTRY_DSN=

# Image Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
NEXT_PUBLIC_IMAGE_QUALITY=80